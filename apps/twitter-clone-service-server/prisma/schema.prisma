datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Like {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tweet     Tweet?   @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Tweet {
  author    String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  likeCount Int?
  likes     Like[]
  message   String?
  retweets  Retweet[]
  updatedAt DateTime  @updatedAt
}

model Retweet {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tweet     Tweet?   @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  bio            String?
  createdAt      DateTime  @default(now())
  email          String?   @unique
  firstName      String?
  id             String    @id @default(cuid())
  lastName       String?
  likes          Like[]
  password       String
  profilePicture Json?
  retweets       Retweet[]
  roles          Json
  updatedAt      DateTime  @updatedAt
  username       String    @unique
}
