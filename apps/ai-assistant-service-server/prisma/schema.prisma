datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Command {
  commandText String?
  createdAt   DateTime   @default(now())
  id          String     @id @default(cuid())
  responses   Response[]
  updatedAt   DateTime   @updatedAt
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
}

model Response {
  command      Command?                  @relation(fields: [commandId], references: [id])
  commandId    String?
  createdAt    DateTime                  @default(now())
  id           String                    @id @default(cuid())
  responseText String?
  responseType EnumResponseResponseType?
  updatedAt    DateTime                  @updatedAt
}

model User {
  bio            String?
  commands       Command[]
  createdAt      DateTime  @default(now())
  email          String?   @unique
  firstName      String?
  id             String    @id @default(cuid())
  lastName       String?
  password       String
  profilePicture Json?
  roles          Json
  updatedAt      DateTime  @updatedAt
  username       String    @unique
}

enum EnumResponseResponseType {
  Option1
}
